{% extends 'layout.html.twig' %}
{% block title %}Produit sélectionné
{% endblock %}
{% block content %}
	<div class="d-flex justify-content-center">
		<div class="card mb-3" style="max-width: 800px;">
			<div class="row g-0">
				<div class="col-md-offset-1 col-md-5">

					<img class="card-img-top" src="{{asset('photosProduits/' ~ produit.photo)}} " alt=" {{produit.photo}}">
				</div>
				<div class="col-md-4 m-5">

					<h5 class="card-title mb-3">{{produit.titre}}</h5>
					<h6 class="card-title mb-3">COULEUR:
						{{produit.couleur}}</h6>
					<h6 class="card-title mb-3">TAILLE:
						{{produit.taille}}</h6>
					<h6 class="card-title mb-3">Il en reste:
						{{produit.stock}}</h6>
					<h6 class="card-text">DESCRIPTION:</h6>
					<p class="card-text mb-3">{{produit.description}}</p>
					<h5 class="card-title mb-3">Prix:
						{{produit.prix}}
						€</h5>
					<div class="cart mt-4 align-items-center">
						<a href="{{path("app_add_panier", {id:produit.id})}}">
							<button class="btn btn-danger m-2 px-4">Ajouter au panier</button>
						</a>
					</div>
					<a href="{{path("app_home")}}" class="btn btn-primary m-2 px-4">Retour à la liste</a>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
